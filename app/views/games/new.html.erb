<h1>Word Game</h1>

<div>
  <h2>Random Letters:</h2>
  <p><%= @letters.join(', ') %></p>

  <h2>Your Word:</h2>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="user_word" required>
    <input type="submit" value="Play">
  </form>
</div>
